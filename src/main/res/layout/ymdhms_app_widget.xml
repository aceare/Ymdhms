<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/widget"
                    android:orientation="vertical"
                    android:padding="@dimen/widget_margin"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/time_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/hms"
            android:text="10:20"
            android:textSize="40sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/ampm"
            android:text="AM"
            android:layout_toRightOf="@+id/hms"
            android:layout_alignBaseline="@+id/hms"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textColor="#fffffc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"/>

        <TextView
            android:id="@+id/menu_indicator"
            android:text="^"
            android:layout_toRightOf="@+id/ampm"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:layout_gravity="right"
            android:paddingRight="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <TextView
        android:id="@+id/dmy"
        android:text="31-Jan-2012"
        android:layout_below="@+id/time_header"
        android:textSize="22sp"
        android:fontFamily="sans-serif"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"/>

    <!--
